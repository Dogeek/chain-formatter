{
    "compilerOptions": {
        "alwaysStrict": true,
        "lib": ["es6"],
        "outDir": "./dist",
        "rootDir": "./src",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "paths": {},
        "esModuleInterop": true,
        "target": "ES6",
        "typeRoots": ["node_modules/@types"],
    },
    "include": ["./src/**/*"],
    "exclude": ["./node_modules", "**/*.spec.ts"]
}